<body class="animated fadeInDown">
<header id="header">
  <div id="logo-group">
    <span id="logo"> <%= image_tag "", alt: "分销系统后台" %> </span>
  </div>

	<span id="extr-page-header-space">
		<span class="hidden-mobile hidden-xs">还没有帐号?</span>
		<a href="" class="btn btn-danger">马上注册</a>
	</span>
</header>

<div id="main" role="main">
  <div id="content" class="container" style="padding-top: 50px;">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
        <h1 class="txt-color-red login-header-big">分销系统</h1>

        <div class="hero">
          <div class="pull-left login-desc-box-l">
            <h4 class="paragraph-header" style="width: 450px;line-height: 40px;font-size: 20px;">
              欢迎登录
            </h4>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
        <div class="well no-padding">
          <%= form_tag admin_manage_sessions_path, id: "new_session_form", class: " smart-form client-form", method: "post" do %>
              <%= hidden_field_tag 'redirect', (redirect ||= params[:redirect] || admin_root_path) %>
              <header>
                后台登录
              </header>
              <div id="login_error" class="alert alert-warning" style="display: none"> 帐号信息填写错误</div>

              <fieldset>
                <section>
                  <label class="label">账号</label>
                  <label class="input">
                    <%= text_field_tag "account[login]", nil, class: 'text-box email', id: "user_email", maxlength: 50 %>
                  </label>
                </section>

                <section>
                  <label class="label">密码</label>
                  <label class="input"> <i class="icon-append fa fa-lock"></i>
                    <%= password_field_tag "account[password]", nil, placeholder: '请输入密码', id: "user_pass", class: 'text-box password', maxlength: 50 %>
                    <!-- <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> 请输入密码</b> -->
                  </label>

                  <div class="note">
                    <a href="javascript:alert('稍后开放！');">忘记密码?</a>
                  </div>
                </section>

                <section>
                  <label class="checkbox">
                    <input type="checkbox" name="remember_me" value="1" checked="">
                    <i></i>下次自动登录</label>
                </section>

                <section>
                  <span class="text-danger"><%= flash[:errors] %></span>
                </section>
              </fieldset>
              <footer>
                <input id="wp-submit" type="submit" class="input submit wp-submit btn btn-primary" value="登 录">
              </footer>
          <% end %>
        </div>
        <div class="mobile-tips" style="display: none; margin: 10px 0; text-align: center;">
          <p>Tips: 收藏为书签，然后在书签管理里可以保存到桌面！</p>
        </div>
      </div>
    </div>
  </div>
</div>


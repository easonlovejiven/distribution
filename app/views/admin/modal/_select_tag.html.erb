<div class="form-group">
  <%= f.label field, class: 'col-md-3 control-label' do -%>
      <%= raw('<sup>*</sup>') if defined?(required) && required %>
      <%= @record.class.human_attribute_name(field) %>
  <% end -%>

  <div class="col-md-6">
    <% if @show %>
        <div class="form-control-static">
          <%= defined?(value) ? raw(value) : raw(raw @record.send(field)) %>
        </div>
    <% else %>
        <% field_class={class: 'form-control'}.merge!(required: true) if defined?(required) && required %>
        <%= f.select field, options, {include_blank: t('helpers.select.prompt')}, field_class %>
        <% if defined?(note) %>
            <span class="note"><%= note %></span>
        <% end %>
        <% if defined?(note) %>
            <span class="note"><%= note %></span>
        <% end %>
    <% end %>
  </div>
</div>

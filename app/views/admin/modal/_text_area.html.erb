<% field_class = {class: 'form-control'}.merge!(f.options[:options_class]||{}) %>
<div class="form-group">
  <%= f.label field, class: 'col-md-3 control-label' do -%>
      <%= raw('<sup>*</sup>') if defined?(required) && required %>
      <%= @record.class.human_attribute_name(field) %>
  <% end -%>

  <div class="col-md-6">
    <% if @show %>
        <%= defined?(value) ? value : @record.send(field) %>
    <% else %>
        <%field_class.merge!(required: true) if (defined?(required) && required)%>
        <%= f.text_area field, field_class %>
        <% if defined?(note) %>
            <span class="note"><%= note %></span>
        <% end %>
    <% end %>
  </div>
</div>


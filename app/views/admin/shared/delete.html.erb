<div class="modal-header">
  <button type="button" class="close" data-dismiss="rightPanel">×</button>
  <h4 class="modal-title">提示</h4>
</div>
<div class="modal-body">
  <div class="form-horizontal">
    <% if record.respond_to?(:deletable?) && !record.deletable? %>
        <h3><%= unable_msg %></h3>

        <div class="form-actions">
          <%= link_to '取消', '#', 'data-dismiss' => "rightPanel", class: 'btn btn-default' %>
        </div>
    <% else %>
        <h3><%= msg ||='请确认是否删除？' %></h3>

        <div class="form-actions">
          <%= link_to '删除', del_url ||= [:admin, record], :method => :delete, class: 'btn btn-success' %>
          <%= link_to '取消', '#', 'data-dismiss' => "rightPanel", class: 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>
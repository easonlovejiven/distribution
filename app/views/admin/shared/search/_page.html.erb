    <%= select_tag 'per_page', options_for_select([10, 20, 50, 100, 200, 500, 1000, 2000, 5000], params[:per_page].to_i), class: "input-xs" %>
  </span>
</div>&nbsp;&nbsp;
<div class="input-group">
  <%= label_tag 'page', t('.page') %>
  <%= text_field_tag 'page', params[:page], size: 4 %>
</div>&nbsp;&nbsp;